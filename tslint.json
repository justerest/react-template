{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}